                // Project One Row
                .row.justify-content-center.no-gutters.mb-5.mb-lg-0
                    .col-lg-6
                        img.img-fluid(src='assets/img/timer.jpg', alt='...')
                    .col-lg-6
                        .text-center.h-100.project
                            .d-flex.h-100
                                .project-text.w-100.my-auto.text-center.text-lg-left
                                    h4.text-black-50 Alunos
                                    span.mb-0.text-black-50
                                        p Agende um horário com alguém capacitado para te ajudar
                                        p Procure mentores disponíveis sempre que precisar
                                        p Estude em grupo se preferir
                                    hr.d-none.d-lg-block.mb-0.ml-0
                // Project Two Row
                .row.justify-content-center.no-gutters
                    .col-lg-6
                        img.img-fluid(src='assets/img/subjects.jpg', alt='...')
                    .col-lg-6.order-lg-first
                        .text-center.h-100.project
                            .d-flex.h-100
                                .project-text.w-100.my-auto.text-center.text-lg-right
                                    h4.text-black-50 Mentores
                                    span.mb-0.text-black-50
                                        p Atenda no conforto de sua casa
                                        p Defina seu próprio horário de trabalho
                                        p Utilize recursos tecnológicos para aumentar a qualidade de ensino
                                    hr.d-none.d-lg-block.mb-0.mr-0

        // Signup
        section#signup.signup-section
            .container
                .row
                    .col-md-10.col-lg-8.mx-auto.text-center
                        h2.text-white.mb-5 Contato
                .row
                    .col-md-4.mb-3.mb-md-0.mx-auto.text-center
                        .card.py-4.h-100
                            a.card-body.text-center(href='https://www.instagram.com/studymentorapp/')
                                i.fab.fa-instagram.fa-3x.text-primary.mb-2
                                hr.my-4
                                .small.text-black-50 @studymentorapp

